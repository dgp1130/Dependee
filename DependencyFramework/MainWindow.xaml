<Window x:Class="DependencyFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBox Text="{Binding Data, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" />
        <TextBlock Text="{Binding Data}" Grid.Row="1" />
        
        <TextBox Text="{Binding Data2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" />
        <TextBlock Text="{Binding Data2}" Grid.Row="3" />
        
        <TextBlock Text="{Binding Data3}" Grid.Row="4" />
        
        <TextBlock Text="{Binding Data4}" Grid.Row="5" />
    </Grid>
</Window>
